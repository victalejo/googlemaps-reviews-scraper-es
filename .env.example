# ============================================================================
# GOOGLE MAPS REVIEWS SCRAPER API - ENVIRONMENT VARIABLES
# ============================================================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Google Maps Reviews Scraper API
APP_VERSION=1.0.0
DEBUG=False

# ============================================================================
# API SERVER
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# MONGODB
# ============================================================================
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DB=googlemaps
MONGODB_PLACES_COLLECTION=places
MONGODB_REVIEWS_COLLECTION=reviews

# ============================================================================
# REDIS (Task Queue)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_QUEUE_NAME=scraping_tasks

# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================
# Número de reseñas por defecto a extraer
DEFAULT_REVIEWS_COUNT=100

# Timeout para operaciones de scraping (segundos)
SCRAPING_TIMEOUT=300

# Ejecutar Chrome en modo headless (sin interfaz gráfica)
HEADLESS_MODE=True

# Ruta al ChromeDriver (None = auto-detección)
CHROME_DRIVER_PATH=

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Intervalo de chequeo por defecto (minutos)
DEFAULT_CHECK_INTERVAL=60

# Habilitar monitoreo automático al iniciar la aplicación
ENABLE_MONITORING_ON_STARTUP=True

# Máximo de scrapers concurrentes
MAX_CONCURRENT_SCRAPERS=3

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
# Timeout para webhooks (segundos)
WEBHOOK_TIMEOUT=10

# Número máximo de reintentos
WEBHOOK_MAX_RETRIES=3

# Delay entre reintentos (segundos)
WEBHOOK_RETRY_DELAY=5

# ============================================================================
# PAGINATION
# ============================================================================
# Tamaño de página por defecto
DEFAULT_PAGE_SIZE=100

# Tamaño máximo de página
MAX_PAGE_SIZE=500

# ============================================================================
# LOGGING
# ============================================================================
# Nivel de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=api.log

# ============================================================================
# EJEMPLO DE .env PARA DESARROLLO LOCAL
# ============================================================================
# MONGODB_URL=mongodb://localhost:27017/
# REDIS_URL=redis://localhost:6379/0
# DEBUG=True
# HEADLESS_MODE=False
# ENABLE_MONITORING_ON_STARTUP=False

